<!DOCTYPE hibernate-mapping
  PUBLIC "-//Hibernate?Hibernate Mapping DTD//EN"
  "http://www.hibernate.org/dtd/hibernate-mapping-3.0.dtd">

<hibernate-mapping>
  <class name="com.pratik.entity.EmpDetails" table="Employee" dynamic-insert="true">
    <id name="no" column="EID"> <!-- Singular Id filed cfg -->
        <generator class="increment"/> 
    </id>
    <property  name="fname" column="FIRSTNAME"/>
    <property name="lname" column="LASTNAME"/>
     <property name="mail" column="EMAIL"/>
  </class>
</hibernate-mapping>
